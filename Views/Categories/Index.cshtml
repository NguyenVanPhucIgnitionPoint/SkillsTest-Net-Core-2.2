@model IEnumerable<SkillsTest.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-3">Category List</h1>

<form asp-controller="Categories" asp-action="Index" method="get">
    <div class="row col-md-12 mb-4">
        <div class="row col-md-10 search-form">
            <div class="col-md-6">
                <input type="text" id="txtSearchCategory" name="SearchString" class="form-control" placeholder="Category name ..." />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary" id="btnSearchCategory">Search</button>
            </div>
        </div>
        <div class="col-md-2">
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </div>
    </div>
</form>
<div class="row col-md-12">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
